= form_for @tweet, :html => { :class => "form-horizontal tweet" } do |f|
  - if @tweet.errors.any?
    #error_expl.panel.panel-danger
      .panel-heading
        %h3.panel-title
          = pluralize(@tweet.errors.count, "error")
          prohibited this tweet from being saved:
      .panel-body
        %ul
          - @tweet.errors.full_messages.each do |msg|
            %li= msg
  .form-group
    = f.label :text, :class => 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :text, :class => 'form-control'
    = f.error_span(:text)
  .form-group
    = f.label :image, :class => 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :image, :class => 'form-control'
    = f.error_span(:image)
  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit nil, :class => 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), |
        tweets_path, :class => 'btn btn-default'                     |
