<%= form_for @tweet do |f| %>
  <%= f.label :text, "テキスト" %>
  <%= f.text_area :text, cols: 40, rows: 5 ,maxlength: 140, style:"display:block" %>
  <%= f.label :image, "画像URL" %>
  <%= f.text_field :image %>
  <%= f.submit '保存' %>
<% end %>

<hr>
<button type="submit" style = "width: 70px; height: 25px;">
  <%= link_to 'ツイート', post_tweets_path %>
</button>