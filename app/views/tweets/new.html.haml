= form_tag vote_tweets_path, method: 'get' do
  = submit_tag "review submit"
  %table.tweets_table
    %tr
      %th id
      %th text
      %th image
      %th accept
      %th
      %th reject
      %th
    -@tweets.reverse.each do |tw|
      %tr
        %td= tw.id
        %td= tw.text
        %td= link_to "■",tw.image unless tw.image.empty?
        %td= radio_button "vote", tw.id, "accept"
        %td= tw.accept_value
        %td= radio_button "vote", tw.id, "reject"
        %td= tw.reject_value
