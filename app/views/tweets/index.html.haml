- model_class = Tweet
.page-header
  %h1= t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:text)
      %th= model_class.human_attribute_name(:image)
      %th= model_class.human_attribute_name(:created_at)
      %th= t '.actions', :default => t("helpers.actions")
  %tbody
    - @tweets.each do |tweet|
      %tr
        %td= link_to tweet.id, tweet_path(tweet)
        %td= tweet.text
        %td= tweet.image
        %td= l tweet.created_at
        %td
          = link_to t('.show', :default => t("helpers.links.show")), |
            tweet_path(tweet), :class => 'btn btn-default btn-xs'    |
          = link_to t('.edit', :default => t("helpers.links.edit")),   |
            edit_tweet_path(tweet), :class => 'btn btn-default btn-xs' |
          = link_to t('.destroy', :default => t("helpers.links.destroy")),                                               |
            tweet_path(tweet),                                                                                           |
            :method => :delete,                                                                                          |
            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, |
            :class => 'btn btn-xs btn-danger'                                                                            |
= link_to t('.new', :default => t("helpers.links.new")), |
  new_tweet_path,                                        |
  :class => 'btn btn-primary'                            |
